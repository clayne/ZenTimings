<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Base.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <BitmapImage x:Key="CameraImage" UriSource="../Resources/camera-light.png" />
    <BitmapImage x:Key="ROGLogo" UriSource="/Resources/ROG/ROG-logo-red-40.png" />

    <!-- Text color -->
    <Color x:Key="{x:Static adonisUi:Colors.ForegroundColor}">#C2C2C2</Color>
    <!-- Window title background -->
    <Color x:Key="{x:Static adonisUi:Colors.Layer0BorderColor}">#1A0302</Color>
    <!-- Window background -->
    <Color x:Key="{x:Static adonisUi:Colors.Layer0BackgroundColor}">#0B1215</Color>

    <Color x:Key="{x:Static adonisUi:Colors.Layer3BorderColor}">#420704</Color>

    <Color x:Key="{x:Static adonisUi:Colors.Layer3BackgroundColor}">#0B1215</Color>

    <!-- Accent button and toggles -->
    <Color x:Key="{x:Static adonisUi:Colors.AccentColor}">#A71C1E</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentForegroundColor}">#F3F3F3</Color>
    <!-- Accent button and toggles hover -->
    <Color x:Key="{x:Static adonisUi:Colors.AccentHighlightColor}">#B03335</Color>
    <!-- Accent button and toggles active -->
    <Color x:Key="{x:Static adonisUi:Colors.AccentInteractionColor}">#96191B</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentInteractionBorderColor}">#96191B</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentIntenseHighlightBorderColor}">#96191B</Color>
    <!-- Dropdown and menu background, 5% lighter than window -->
    <Color x:Key="{x:Static adonisUi:Colors.Layer1BackgroundColor}">#481310</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Layer1BorderColor}">#481310</Color>
    <!-- Dropdown and menu hover background -->
    <Color x:Key="{x:Static adonisUi:Colors.Layer1HighlightColor}">#4E1F1D</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Layer1HighlightBorderColor}">#552B29</Color>
    <!-- Window button hover color -->
    <Color x:Key="{x:Static adonisUi:Colors.WindowButtonHighlightColor}">#4E1F1D</Color>

    <Color x:Key="{x:Static adonisUi:Colors.Layer2HighlightColor}">#683936</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Layer2HighlightBorderColor}">#7B514F</Color>

    <CornerRadius x:Key="{x:Static adonisUi:Dimensions.CornerRadius}">2</CornerRadius>

    <SolidColorBrush x:Key="AccentTextColor" Color="#DE272C" />

    <!-- Panels -->
    <SolidColorBrush x:Key="PanelBackground" Color="{StaticResource {x:Static adonisUi:Colors.Layer0BackgroundColor}}" />
    <SolidColorBrush x:Key="BottomPanelBackground" Color="#1A0302" />
    <SolidColorBrush x:Key="MainMenuPanelBackground" Color="#420704" />
    <SolidColorBrush x:Key="MenuItemBackground" Color="#420704" />

    <SolidColorBrush x:Key="TextColor" Color="{StaticResource {x:Static adonisUi:Colors.ForegroundColor}}" />
    <SolidColorBrush x:Key="SeparatorColor" Color="{StaticResource {x:Static adonisUi:Colors.Layer3BorderColor}}" />
    <!-- SolidColorBrush x:Key="SuccessBackground" Color="{DynamicResource {x:Static adonisUi:Colors.Layer3BorderColor}}" /-->
    <SolidColorBrush x:Key="SuccessBackground" Color="#327b56" />
    <SolidColorBrush x:Key="DisabledColor" Color="#847676" />
    <SolidColorBrush x:Key="WindowBorderColor" Color="{StaticResource {x:Static adonisUi:Colors.Layer3BorderColor}}" />

    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0.5,1" EndPoint="0.5,0">
        <GradientStop Color="#1A0302" Offset="1.0" />
        <GradientStop Color="#0B1215" Offset="0.0" />
    </LinearGradientBrush>

    <Style x:Key="MainMenuStyles" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#1A0302" />
        <Setter Property="Padding" Value="5 2 7 2" />
    </Style>
    <Style x:Key="MenuStyles" TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="{x:Null}" />
    </Style>
    <Style x:Key="BottomPanelStyles" TargetType="{x:Type Border}">
        <Setter Property="Padding" Value="5" />
        <Setter Property="Background" Value="{x:Null}" />
    </Style>
    <Style x:Key="PanelStyles" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#1A0302" />
    </Style>
    <Style x:Key="WindowStyles" TargetType="{x:Type Window}">
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderColor}" />
        <Setter Property="Background" Value="{StaticResource BackgroundGradientBrush}" />
    </Style>
</ResourceDictionary>

